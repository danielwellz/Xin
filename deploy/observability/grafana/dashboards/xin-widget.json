{
  "id": null,
  "uid": "xin-widget",
  "title": "Widget & Gateway",
  "tags": [
    "xin",
    "gateway"
  ],
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "title": "Gateway Request Rate",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{service=\"channel_gateway\"}[1m])) by (route)",
          "legendFormat": "{{route}}",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "fieldConfig": {
        "defaults": {
          "unit": "req/s"
        },
        "overrides": []
      }
    },
    {
      "id": 2,
      "title": "Widget Errors (Loki)",
      "type": "logs",
      "datasource": {
        "type": "loki",
        "uid": "Loki"
      },
      "targets": [
        {
          "expr": "{container=\"xin_channel_gateway\"} |= `error`"
        }
      ],
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 12,
        "y": 0
      }
    }
  ]
}
